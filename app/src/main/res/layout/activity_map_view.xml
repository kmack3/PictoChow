<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/actionBarCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:gravity="right">
        <Button
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filters"
            android:onClick="buttonHandler"
            android:textSize="18sp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:background="@color/buttonGrey"
            android:layout_gravity="left" />

        <Button
            android:id="@+id/randomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/buttonGrey"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:textSize="18sp"
            android:onClick="buttonHandler"
            android:text="I'm Feeling Lucky" />

        <ToggleButton
            android:id="@+id/visualizeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonGrey"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:textSize="18sp"
            android:textOn="Visualize Mode"
            android:textOff="Visualize Mode"
            android:layout_gravity="right"
            android:onClick="buttonHandler"/>
    </LinearLayout>

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionBarCustom"
        mapbox:mapbox_cameraTargetLat="40.110281"
        mapbox:mapbox_cameraTargetLng="-88.232022"
        mapbox:mapbox_styleUrl="mapbox://styles/mapbox/light-v9"
        mapbox:mapbox_cameraZoom="16" />

    <Button
        android:id="@+id/compareButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:onClick="buttonHandler"/>

</RelativeLayout>